<div class="container mt-5">
<div class="row">
  <div class="col-md-6">

    <div class="panel panel-primary">
      <div class="panel-heading">
        カートの中身
      </div>


      <% if @cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
          <% if cart_item.item.image.present? %>
            <%= image_tag cart_item.item.image.thumb.url,size: "100x100" %>
          <% end %>
          <div class="panel-body">
          <%= cart_item.item.artist_name %>
          </div>
          <div class="panel-body">
          <%= cart_item.item.item_name %>
          </div>
          <div class="panel-body">
          <%= cart_item.cart_item_count %>枚
          </div>
          <%= link_to "削除する",  delete_cart_item_path(cart: {id: current_user.cart.id}, cart_item: {id: cart_item.id}), method: :delete %>
          <hr>
        <% end %>
      <% end %>
      <% if @cart_items.present? %>
        <%= link_to "購入する", orders_path(user_id: current_user.id),class: "btn btn-primary ml-1",method: :post %>

        <% else %>
       <p> カートの中身はありません。</p>
      <% end %>

    </div>

  </div>
</div>
  </div>