<div class="container">
  <h1 class="mt-5">プロフィール</h1>
  <div class="mt-2">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">名前</th>
          <th scope="col">苗字</th>
          <th scope="col">性別</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">生年月日</th>
          <th scope="col">住所</th>
          <th scope="col">郵便番号</th>
          <th scope="col">電話番号</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= @user.first_name %>
          </td>
          <td>
            <%= @user.last_name %>
          </td>
          <td>
            <%= @user.gender %>
          </td>
          <td>
            <%= @user.email %>
          </td>
          <% if @user.birthday.present? %>
          <td>
            <%= @user.birthday.strftime("%Y年%m月%d日") %>
          </td>
          <% end %>
          <td>
            <%= @user.addresses.first.try(:ship) %>
          </td>
          <td>
            <%= @user.addresses.first.try(:zip) %>
          </td>
          <td>
            <%= @user.addresses.first.try(:phone) %>
          </td>
        </tr>

      </tbody>
    </table>
    <div class="text-right">
      <%= link_to "プロフィール編集", edit_user_path(current_user.id) %>
      <div>
        <%= link_to "パスワード変更", edit_user_registration_path %>
      </div>
    </div>
  </div>
</div>