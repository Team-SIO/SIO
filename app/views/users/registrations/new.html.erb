<div class="login">
<div class="login2">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, {class: 'moji'} %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "box" %>
  </div>
    <div class="field">
      <%= f.label :first_name, {class: 'moji'} %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "box" %>
    </div>
  <div class="field">
    <%= f.label :last_name, {class: 'moji'} %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "box" %>
  </div>

  <div class="field">
    <%= f.label :password, {class: 'moji'} %>
    <% if @minimum_password_length %><br>
    <em class="moji">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "box" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, {class: 'moji'} %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "box" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>