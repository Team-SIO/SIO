<div class="login">
<div class="login2">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div id="signup">
  

  <div class="field">
    <%= f.label :email, {class: 'moji'} %><br />
    <input autofocus="autofocus" autocomplete="email" class="box" type="email" value="" name="user[email]" id="user_email" v-model="email">
    <div style="color: red;" v-if="error.require">
      必須項目です
    </div>
  </div>
    <div class="field">
      <%= f.label :first_name, {class: 'moji'} %><br />
     <input autofocus="autofocus" autocomplete="first_name" type="text" name="user[first_name]" id="user_first_name" class="box" v-model="first">
      <div style="color: red;" v-if="error.require">
      必須項目です
    </div>
    </div>
  <div class="field">
    <%= f.label :last_name, {class: 'moji'} %><br />
    <input autofocus="autofocus" autocomplete="last_name" type="text" name="user[last_name]" id="user_last_name" class="box" v-model="last">
    <div style="color: red;" v-if="error.require">
      必須項目です
    </div>
  </div>

  <div class="field">
    <%= f.label :password, {class: 'moji'} %>
    <% if @minimum_password_length %><br>
    <em class="moji">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <input autocomplete="new-password" type="password" name="user[password]" id="user_password" class="box" v-model="pass">
    <div style="color: red;" v-if="error.require">
      必須項目です
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, {class: 'moji'} %><br />
   <input autocomplete="new-password" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="box" v-model="passcom">
    <div style="color: red;" v-if="error.require">
      必須項目です
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>