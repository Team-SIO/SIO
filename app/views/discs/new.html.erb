<div class="mt-5">
	<%= form_for @disc, url: item_discs_path do |f| %>
		<div class="form-group">
			<%=f.label :ディスク番号 %>
			<%= f.text_field :disc_order %>
		</div>
		<hr/>
		<div class="col-sm-8">
		<%= f.fields_for :songs do |task| %>
		  <%= render 'dong_field', f: task %>
	  	<% end %>
	  	<div class="links">
          <%= link_to_add_association '曲を追加する', f, :tasks %>
        </div>
	<%= f.submit "作成する", class: "btn btn-info mt-5" %>
  <% end %>
     </div> 	
</div>
<div class="text-right">
	<%=link_to "戻る", edit_item_path(@item) ,class: "back"%>
</div>



