</div>
 <%= link_to "管理者へ", admintop_path,class: "btn btn-info ml" %>


<div class="container"> 
<p>Item search</p>


 <h1 class="mt-5">商品一覧</h1>
  <div class="mt-2">
     <table class="table table-hover">
     <thead>
      <tr>
        <th scope="col">アーティスト名</th>
        <th scope="col">タイトル</th>
        <th scope="col">情報</th>
        <th scope="col">価格</th>
        <th scope="col">在庫</th>
        <th scope="col">画像</th>
      </tr>
    </thead>
    <% @items.each do |item|%>
    <tbody>
      <tr>
         <td class="info"> 
              <%= item.try(:artist_name) %>
          </td>
          <td><%= item.try(:item_name) %></td>
          <td><%= item.try(:item_info) %></td>
          <td><%= item.try(:price)%>円</td>
          <td><%= item.try(:stock) %></td>
          <% if item.image.present? %>
            <td> <%= image_tag item.image.thumb.url,size: "50x50" ,class: "img-thumbnail"%></td>
          <% else %>
            <td> <%= image_tag "no-image.png",size: "50x50",class: "img-thumbnail"%></td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
 </div>
 </div>

