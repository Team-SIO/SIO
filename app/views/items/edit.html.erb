<div class="mt-5">
	<%= form_for @item do |f| %>
		<div class="form-group">
			<%=f.label :タイトル %>
			<%= f.text_field :item_title ,class: "form-control"%>
		</div>
		<div class="form-group">
			<%=f.label :情報 %>
			<%= f.text_field :item_info ,class: "form-control"%>
		</div>
		<div class="form-group">
			<%=f.label :価格 %>
			<%= f.text_field :price ,class: "form-control"%>
		</div>
		<div class="form-group">
			<%=f.label :アーティストID %>
			<%= f.text_field :artist_id,class: "form-control" %>
		</div>
		<div class="form-group">
			<%=f.label :在庫数 %>
			<%= f.text_field :stock ,class: "form-control"%>
		</div>
	<%= f.submit "作成する", class: "btn btn-info mt-5" %>
  <% end %>
</div>
<div class="text-right">
	<%=link_to "戻る", admintop_path ,class: "back"%>
</div>