<div class="mt-5">
	<%= form_for @disc, url: admins_item_disc_path(@disc), method: :patch do |f| %>
	<div class="row">
		<div class="form-group col-sm-4">
			<%=f.label :ディスク番号 %>
			<%= f.text_field :disc_order ,class: "form-control"%>
		</div>
	</div>
	<hr/>
		<div class="row">
		<%= f.fields_for :songs do |s| %>
				<div class="form-group">
					<div class="col-sm-4 mt-2">
			      <%=s.label :曲順 %>
				   <%= s.text_field :song_order ,class: "form-control" %>
				   </div>
				   <div class="col-sm-4 mt-2">
				  <%=s.label :曲名 %>
			   	  <%= s.text_field :song_name ,class: "form-control" %>
			   	  </div>
				   <div class="col-sm-4 mt-2">
			   	  <%=s.label :タイム %>
			   	 <%= s.text_field :time ,class: "form-control" %>
			   	</div>
		   	   </div>
	  	<% end %>
	<%= f.submit "作成する", class: "btn btn-info mt-5" %>
  <% end %>	
</div>
</div>
<div class="text-right">
	<%=link_to "戻る", edit_item_path(@item) ,class: "back"%>
</div>



