<h1 class="mt-5">商品情報一覧</h1>
<div class="mt-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">タイトル</th>
        <th scope="col">情報</th>
        <th scope="col">価格</th>
        <th scope="col">アーティスト名</th>
        <th scope="col">在庫数</th>
        <th scope="col">画像</th>
        <th scope="col">編集</th>
      </tr>
    </thead>
    <% @items.each do |item|%>
    <tbody>
      <tr>
        <td class="info">
          <%=link_to admins_item_path(item) do %>
          <%= item.try(:item_name) %>
          <% end %>
        </td>
        <td>
          <%= item.try(:item_info) %>
        </td>
        <td>
          <%= item.try(:price)%>円</td>
        <td>
          <%= link_to admins_artist_path(item.artist) do %>
          <%= item.try(:artist_name) %>
          <% end %>
        </td>
        <td>
          <%= item.try(:stock) %>
        </td>
        <% if item.image.present? %>
        <td>
          <%= image_tag item.image.thumb.url,size: "50x50" ,class: "img-thumbnail"%>
        </td>
        <% else %>
        <td>
          <%= image_tag "no-image.png",size: "50x50",class: "img-thumbnail"%>
        </td>

        <% end %>
        <td>
          <%=link_to "編集", edit_admins_item_path(item) ,style: "color: #000"%>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="text-right">
    <%= link_to "戻る", admintop_path ,class: "back"%>
  </div>
</div>

<%= paginate @items %>


