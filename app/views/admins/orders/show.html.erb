<div class="mt-5">
<div class="panel panel-success">
	<div class="panel-heading">
		ユーザー名:<%= @order.name %>
	</div>
	<div class="panel-body">
		送り先:<%= @order.ship %>
	</div>
	<div class="panel-body">
		状態:<%= @order.status_i18n %>
	</div>
	<div class="panel-body">
	  注文時間: <%= @order.created_at.strftime('%Y年%m月%d日 %H:%M') %>
	</div>

	<% @order.order_items.each do |order_item| %>
	<div class="panel-body">
		<%= order_item.item.artist.artist_name %>
	</div>
	<div class="panel-body">
		<%= order_item.item.item_name %>
	</div>
	<div class="panel-body">
		<%= order_item.item.item_info %>
	</div>
	<div class="panel-body">
		<%= order_item.order_item_count %> 枚
	</div>
	<div class="panel-body">
		<%= order_item.item.price %> 円
	</div>
	<hr>
	<% end %>
		<% @sum = @order.order_items.joins(:item).sum(:price) %>
	
　　　合計金額: <%= @sum %>円

	
</div>

<div class="text-right">
	<%=link_to "戻る", admintop_path ,class: "back"%>
	<%=link_to "編集", edit_admins_order_path(@order) ,class: "back"%>
</div>