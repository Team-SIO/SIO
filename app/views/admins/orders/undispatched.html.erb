  <h1 class="mt-5">未発送オーダー</h1>
  <div class="mt-2">
    <table class="table table-hover">
     <thead>
      <tr>
        <th scope="col">ユーザー名</th>
        <th scope="col">送り先</th>
        <th scope="col">状態</th>
        <th scope="col">注文時間</th>
      </tr>
    </thead>
    <% @orders.each do |order|%>
    <tbody>
      <tr>
          <td class="info"> 
              <%= order.user.try(:name) %>
          </td>
          <td><%= order.try(:ship)%></td>
          <td><%= order.status %></td>
          <td><%= order.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <div class="text-right">
     <%= link_to "戻る", admintop_path ,class: "back"%>
   </div>
 </div>

 <%= paginate @orders %>

