<div class="mt-5">
	<%= form_for @artist, url: admins_artists_path do |f| %>
	<div class="form-group">
		<%= f.label :アーティスト名 %>
		<%= f.text_field :artist_name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :アーティスト情報 %>
		<%= f.text_area :artist_info, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.lasbel :レーベル%>
		<%= f.collection_select :label_id, Label.all, :id, :label_name , :prompt => "選択してください",class: "form-control"%>
	</div>
	<div class="form-group">
		<%= f.label :ジャンル%>
		<%= f.collection_select :genre_id, Genre.all, :id, :genre_name , :prompt => "選択してください", class: "form-control"%>
	</div>
	<%= f.submit "作成する", class: "btn btn-info mt-5" %>
	<% end %>
</div>
</div>
<div class="text-right">
	<%=link_to "戻る", admintop_path ,class: "back"%>
</div>